@page "/categorias"
@inherits ListCategoriesPage

<PageTitle>Categorias</PageTitle>

<div class="d-flex mt-8">
    <MudText Typo="Typo.h3">Categorias</MudText>
    <MudSpacer />
    <MudButton 
        Variant="Variant.Filled" 
        Color="Color.Primary" 
        Href="/categorias/adicionar"
        StartIcon="@Icons.TwoTone.Add"
    >Nova Categoria</MudButton>
</div>

<MudDataGrid 
    Items="Categories" 
    Class="mt-8" 
    Filterable="true" 
    QuickFilter="Filter" 
    ShowFilterIcons="false">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Categorias</MudText>
        <MudSpacer />
        <MudTextField 
            @bind-Value="SearchTerm" 
            Placeholder="Filtrar" 
            Adornment="Adornment.Start" 
            AdornmentIcon="@Icons.Material.Filled.Search"
            Immediate="true"
            IconSize="Size.Medium"
            Class="mt-0"/>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="#" />
        <PropertyColumn Property="x => x.Title" Title="Categoria" />
        <TemplateColumn Class="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudIconButton 
                        Icon="@Icons.Material.Filled.Edit" 
                        Color="Color.Info" 
                        Href="@($"/categorias/editar/{context.Item.Id}")" />

                    <MudIconButton 
                        Icon="@Icons.Material.Filled.Delete" 
                        Color="Color.Error"
                        OnClick="() => OnDeleteButtonClickedAsync(context.Item.Id, context.Item.Title)" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
